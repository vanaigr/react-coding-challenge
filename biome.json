{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": false
    },
    "files": {
        "ignoreUnknown": false,
        "ignore": []
    },
    "formatter": { "enabled": false },
    "organizeImports": { "enabled": false },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "useTemplate": "off",
                "noNonNullAssertion": "off",
                "noUselessElse": "off"
            },
            "suspicious": {
                "noExplicitAny": "off",
                "noArrayIndexKey": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "semicolons": "asNeeded"
        }
    }
}
